<p>
  <strong>Name:</strong>
  <%= @column.name %>
</p>

<p>
  <strong>Color:</strong>
  <%= @column.background_color %>
</p>

<h2>Cards:</h2>
<%= render @column.cards %>
<h2>Add a card:</h2>
<%= form_with(model: [@board, @column, @column.cards.build], local: true) do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
