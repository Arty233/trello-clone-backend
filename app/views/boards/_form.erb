<%= form_with model: @board, local: true do |form| %>

  <% if @board.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@board.errors.count, "error") %> occurred:
      </h2>
      <ul>
        <% @board.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.label :background_img %><br>
    <%= form.text_field :background_img %>
  </p>

  <p>
    <%= form.label :background_color %><br>
    <%= form.text_field :background_color %>
  </p>

  <p>
    <%= form.label :progress %><br>
    <%= form.text_field :progress %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>